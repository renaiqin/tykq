/* pages/sj/addSj/sjEdit.wxss */

.add-sj-wrapper {
  min-height: 100%;
  font-size: 32rpx;
  padding-bottom: 41rpx;
  background: #F2F3F5;
}
.section {
  display: flex;
  height: 88rpx;
  align-items: center;
  padding: 0 30rpx;
  border-bottom: 1rpx solid #F2F3F5;
  background: #FFFFFF;
}
.marginTop {
  margin-top: 11rpx;
}
.money {
  color: #FF7B12;
}
.title {
  width: 180rpx;
  color: #808080;
}
.select-box {
  flex: 1;
  position: relative;
  padding: 15rpx;
}
.select-box .picker {
  height: 88rpx;
  line-height: 88rpx;
}
.icon-zhankai {
  position: absolute;
  right: 10rpx;
  top: 42rpx;
  color: #262727;
}
.section-textarea {
  display: flex;
  padding: 10rpx 30rpx;
  margin-bottom: 30rpx;
  background: #FFFFFF;
}
.btn-area {
  width: 90%;
  margin: 0 auto;
}
.btn-area button {
  background: #0088F5;
  color: #FFFFFF;
}

/* switch  */
switch {
  zoom: .7;
}

/* pages/sj/followUp/followUp.wxss */

.followUp-sj-wrapper {
  min-height: 100%;
  font-size: 32rpx;
  padding-bottom: 41rpx;
  background: #F2F3F5;
}
.section {
  display: flex;
  height: 88rpx;
  align-items: center;
  padding: 0 30rpx;
  border-bottom: 1rpx solid #F2F3F5;
  background: #FFFFFF;
}
.marginTop {
  margin-top: 11rpx;
}
.title {
  width: 180rpx;
}
.width {
  width: 200rpx;
}
.select-box {
  flex: 1;
  position: relative;
  height: 100%;
}
.select-box picker, .picker {
  height: 88rpx;
  line-height: 88rpx;
}
.icon-zhankai {
  position: absolute;
  right: 10rpx;
  top: 25rpx;
  color: #262727;
}
.section-textarea {
  display: flex;
  padding: 10rpx 30rpx;
  margin-bottom: 30rpx;
  background: #FFFFFF;
}
.btn-area {
  width: 90%;
  margin: 0 auto;
}
.btn-area button {
  background: #0088F5;
  color: #FFFFFF;
}

/* switch  */
switch {
  zoom: .7;
}


/* 跟进列表 */
.followUp-list {
  padding: 0 15rpx;
}
.item {
  padding: 30rpx;
  margin-top: 30rpx;
  background: #FFFFFF;
}
.item-top {
  margin-bottom: 30rpx;
}
.name {
  font-size: 36rpx;
  color: #262727;
  font-weight: bold;
}
.time {
  color: #262727;
  font-size: 13px;
}
.item-content {
  color: #808080;
  font-size: 28rpx;
}

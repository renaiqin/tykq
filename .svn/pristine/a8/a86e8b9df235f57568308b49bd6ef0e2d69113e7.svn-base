/* pages/home/home.wxss */
.homeWarp{
  width: 100%;
  height: 100%;
  overflow: hidden;
}
.homeBg{
  width: 100%;
  height: 380rpx;
}
.homeMenu{
  margin-top:20rpx;
}

.signIn,.writeDiary{
  width: 140rpx;
  height: 150rpx;
  margin-top:20rpx;
  margin-left: 40rpx;
}
.writeDiaryImg,.signInImg{
  width: 100%;
  height: 100rpx;
}
.writeDiaryText,.signInText{
  width: 100%;
  display: block;
  font-size: 25rpx;
}

.message{
  position: absolute;
  top:20rpx;
  right:30rpx;
  font-size: 34rpx;
  width: 60rpx;
  height: 80rpx;
}

.messageImg{
  width: 100%;
  height:80rpx;
}
.item{
  width: 100rpx;
  height: 100%;
}

button::after{
 border:none;
}
button{
  outline:none;
  border:none;
  list-style: none;
  background-color: #fff;
  text-align: left;
  overflow: visible;
  line-height: 50rpx;
  padding:20rpx;
}
.button-hover {
  background-color: #fff;
}

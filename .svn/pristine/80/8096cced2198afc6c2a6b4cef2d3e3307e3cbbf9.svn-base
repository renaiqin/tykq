/* pages/home/my/myhome/myhome.wxss */
.myHeard{
  width: 100%;
  height: 500rpx;
  position: relative;
}

.usebgimg{
  position: absolute;
  top:0;
  left: 0;
  width: 100%;
}

.userInfo{
  width: 200rpx;
  height: 300rpx;
  position: absolute;
  top:100rpx;
  left: 300rpx;
}

.userName,.userDepart{
  color:#fff;
  font-size: 30rpx;
  text-align: center;
}

.userDepart{
  border: 1rpx solid #fff;
  border-radius: 20rpx;
  text-align: center;
  line-height: 50rpx;
  margin:10rpx auto;
  display: block;
}

.userno{
  width: 200rpx;
  height: 200rpx;
}

.list{
  width: 96%;
  margin:20rpx;
  height: 70rpx;
  border-bottom:1rpx solid #E3E3E3;
  position: relative;
}

.listName{
  width: 20%;
  font-size: 30rpx;
  line-height: 70rpx;
  color:#333;
}

.noBorder{
  border-bottom:none;
}
.list::after{
  content: ""; 
  position: absolute;
  top: 0rpx; 
  right: 0rpx; 
  margin: 20rpx; 
  border-right:1rpx solid #C8C7CC; 
  border-bottom: 1rpx solid #C8C7CC; 
  width: 18rpx; 
  height: 18rpx; 
  transform: rotate(-45deg);
  -o-transform: rotate(-45deg); 
  -webkit-transform: rotate(-45deg);
  -moz-transform: rotate(-45deg); 
  -ms-transform: rotate(-45deg);
}

.back{
  width: 90%;
  height: 80rpx;
  font-size: 30rpx;
  text-align: center;
  line-height: 80rpx;
  color:#fff;
  background-color: #4787F1;
  border-radius: 20rpx;
  margin:10rpx auto;
}
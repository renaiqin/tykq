/* pages/diary/addPlan/addPlan.wxss */
.planWarp{
  width: 100%;
  margin:0 auto;
  min-height: 1200rpx;
}
.pickerTime,.picker{
  width: 230rpx;
  margin:30rpx auto;
  display: block;
}

.timeStyle{
  background-color: #fff;
  width: 220rpx;
  height: 70rpx;
  text-align: left;
  line-height: 70rpx;
  font-size: 30rpx;
  padding-left: 20rpx;
  position: relative;
}

.timeStyle:before{
  content:"";
  position:absolute;
  top:30rpx;
  right:6rpx;
  border-top:14rpx solid #C8C7CC;
  border-left:14rpx solid transparent;
  border-right:14rpx solid transparent;
}

.list{
  width: 96%;
  margin:20rpx;
  height: 70rpx;
  border-bottom:1rpx solid #E3E3E3;
}

.listIcon{
  width: 10%;
  height: 10%;
}
.iconImg{
  width: 50rpx;
  height:50rpx;
  margin-top:5rpx;
}

.listName{
  width: 30%;
  font-size: 35rpx;
  line-height: 70rpx;
  color:#333;
}
.listValue{
  width:390rpx;
  font-size: 30rpx;
  line-height: 65rpx;
  text-align: right;
  color:#999;
  overflow: hidden;
  white-space: nowrap; 
  text-overflow: ellipsis;
  padding-right:20rpx;
}
.noBorder{
  border-bottom:none !important;
}

.needAfter{
  position: relative;
}
.needAfter::after{
  content: ""; 
  position: absolute;
  top: 0rpx; 
  right: 0rpx; 
  margin: 20rpx; 
  border-right:1rpx solid #C8C7CC; 
  border-bottom: 1rpx solid #C8C7CC; 
  width: 18rpx; 
  height: 18rpx; 
  transform: rotate(-45deg);
  -o-transform: rotate(-45deg); 
  -webkit-transform: rotate(-45deg);
  -moz-transform: rotate(-45deg); 
  -ms-transform: rotate(-45deg);
}

.planTitle{
  display: block;
  width: 100%;
  height:80rpx;
  line-height: 80rpx;
  background-color: rgb(252, 248, 248);
  color:#666;
  font-size: 32rpx;
  padding-left: 20rpx;
}

.handel{
  width: 100%;
  height: 80rpx;
  position: fixed;
  bottom:20rpx;
}

.add,.comfire{
  width: 40%;
  height: 80rpx;
  background-color: #4787F1;
  color:#fff;
  text-align: center;
  line-height: 80rpx;
  margin-left: 6%;
  border-radius: 10rpx;
}
.listwarp{
  padding-bottom: 60rpx; /*bottom值为footer的高*/
  box-sizing: border-box; /*这里改变盒子模型为怪异盒模型，这样padding值不会增加main的高度*/
  overflow-y: scroll;
}

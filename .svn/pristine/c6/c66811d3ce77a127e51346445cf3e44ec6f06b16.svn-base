/* pages/device/deviceRepair/deviceRepair.wxss */
.main{
  width:90%;
  margin:0 auto;
}

.title {
  width: 180rpx;
  color: #808080;
}
.section{
  font-size: 30rpx;
  height:58rpx;
  line-height: 58rpx;
}
.picker{
  position: relative;
  width: 450rpx;
  border:1rpx solid #C8C8CA;
  border-radius: 4rpx;
  padding-left: 10rpx;
}
.picker::after{
  content:"";
  position:absolute;
  top:25rpx;
  right:6rpx;
  border-top:14rpx solid #C8C7CC;
  border-left:14rpx solid transparent;
  border-right:14rpx solid transparent;
}

.top{
  margin-top:20rpx;
}
.tr{
  color: #808080;
  width: 210rpx;
  text-align: right;
}
.textareaDom{
  height: 250rpx;
  width: 470rpx;
  font-size: 30rpx;
  border:1rpx solid #C8C8CA;
  border-radius: 4rpx;
  padding: 10rpx;
}

.submit{
  width: 40%;
  height: 80rpx;
  margin:20rpx auto;
  font-size: 30rpx;
  text-align: center;
  line-height: 80rpx;
  color:#fff;
  background-color: #4787F1;
  border-radius: 40rpx;
}
.imgDom{
  width: 155rpx;
  height: 150rpx;
  margin-right: 8rpx;
  margin-left: 7rpx;
  margin-top:20rpx;
}
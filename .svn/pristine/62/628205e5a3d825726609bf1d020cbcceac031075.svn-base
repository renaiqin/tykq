/* pages/diary/allDiary/allDiary.wxss */
.diaryMary{
  width: 100%;
  margin: 20rpx auto;
  overflow: hidden;
}

.timeWarp{
  width: 700rpx;
  height: 100rpx;
  background-color: #fff;
  margin:0rpx auto;
}

.todayIcon{
  width: 50rpx;
  height: 50rpx;
  margin-top:10rpx;
  }
.timeStyle{
  background-color: #F7F7F7;
  width: 220rpx;
  height: 70rpx;
  text-align: left;
  line-height: 70rpx;
  font-size: 30rpx;
  padding-left: 20rpx;
  position: relative;
}

.timeStyle:before{
		content:"";
		position:absolute;
		top:30rpx;
		right:6rpx;
		border-top:14rpx solid #C8C7CC;
		border-left:14rpx solid transparent;
    border-right:14rpx solid transparent;
	}

.toText{
  color:#E3E3E3;
  font-weight: 400;
  font-size: 35rpx;
  line-height:70rpx;
  margin:0 20rpx;
  padding-left:15rpx;
  
}

picker{
  width: 220rpx;
  float: left;
}

.pickerText{
  height: 70rpx;
  line-height: 70rpx;
}

.tabCom{
  float: left;
  width: 150rpx;
  height: 60rpx;
  line-height: 60rpx;
  text-align: center;
  color:#333;
  font-size: 30rpx;
  border-radius: 10rpx;
  margin-right:20rpx;
  background-color: #F7F7F7;
}

.diaryNormal{
  width: 50%;
  height: 60rpx;
  text-align: center;
  line-height: 60rpx;
  font-size: 35rpx;
  border-bottom:1rpx solid #C8C7CC;
  margin-bottom:20rpx;
}
.diaryType{
  width: 90%;
  margin:0 auto;
}

.checkDiary{
  color:#4787F1;
  border-bottom:1rpx solid #4787F1;
}

.check{
  background-color: #4787F1;
  color:#fff;
}
.diarylist{
  width: 86%;
  margin:10rpx auto;
  padding:20rpx;
  border:1rpx solid #C8C7CC;
  border-radius: 5rpx;
}

.inputtime{
  font-size: 25rpx;
  color:#C8C7CC;
}
.rDate{
  color:#C8C7CC;
}

.dayText{
  font-size:20rpx;
  padding:2rpx 10rpx;
  background-color: #4CDA64;
  color:#fff;
  margin-left:10rpx;
}

.inline{
  display: block;
  font-size: 30rpx;
}

.inlineTitle{
  color:#818FAA;
}
.inlineContent{
  color:#666;
  overflow: hidden;
  text-overflow:ellipsis;
  white-space: nowrap;
  width: 100%;
  height: 36rpx;
}

.detailList{
  margin-bottom:10rpx;
}

.readAll{
  width: 100%;
  color:#666;
  font-size: 30rpx;
  position: relative;
  padding-top:10rpx;
}
.readAll:after{
  content: ""; 
  position: absolute;
  top: 0rpx; 
  right: -16rpx; 
  margin: 20rpx; 
  border-right:1rpx solid #666; 
  border-bottom: 1rpx solid #666; 
  width: 20rpx; 
  height: 20rpx; 
  transform: rotate(-45deg);
  -o-transform: rotate(-45deg); 
  -webkit-transform: rotate(-45deg);
  -moz-transform: rotate(-45deg); 
  -ms-transform: rotate(-45deg);
}

.writeButton{
  width: 90%;
  height: 80rpx;
  position: fixed;
  left: 5%;
  font-size: 30rpx;
  bottom:40rpx;
  text-align: center;
  line-height: 80rpx;
  color:#fff;
  background-color: #4787F1;
  border-radius: 20rpx;
}

.viewScroll{
  height:800rpx;
  overflow-y: scroll;
}
.diaryType{
  width: 540rpx;
  margin:0 auto;
}


.check{
  background-color: #4787F1 !important;
  color:#fff !important;
}


.tabCom{
  float: left;
  width: 250rpx;
  height: 60rpx;
  line-height: 60rpx;
  text-align: center;
  color:#333;
  font-size: 30rpx;
  background-color: #F7F7F7;
  margin-left: 10rpx;
  margin-right: 10rpx;
  border-radius: 8rpx;
}

.item{
  padding: 30rpx;
  font-size: 30rpx;
  border-bottom:2rpx solid #eee;
}

.picker{
  position: relative;
  width: 660rpx;
  border:1rpx solid #C8C8CA;
  border-radius: 4rpx;
  padding-left: 20rpx;
  font-size: 30rpx;
  margin-left: 30rpx;
  height: 60rpx;
  margin-top:20rpx;
  line-height: 60rpx;
}
.picker::after{
  content:"";
  position:absolute;
  top:25rpx;
  right:12rpx;
  border-top:14rpx solid #C8C7CC;
  border-left:14rpx solid transparent;
  border-right:14rpx solid transparent;
}
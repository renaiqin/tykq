/* pages/orderForm/orderFormDetail/orderFormDetail.wxss */

.sj-detail-wrapper {
  min-height: 100%;
  font-size: 32rpx;
  padding-bottom: 108rpx;
  background: #F2F3F5;
}
.section-box {
  padding: 0 30rpx;
  background: #FFFFFF;
}
.border-padding {
  padding-top:30rpx;
  border-top: 2rpx solid #E8E9EB;
}
.marginTop10 {
  margin-top: 10rpx;
}
.paddingTop30 {
  padding-top: 30rpx;
}
.section {
  display: flex;
  align-items: center;
  padding-bottom: 30rpx;
}
.section-top {
  display: flex;
  align-items: center;
  padding-bottom: 20rpx;
}
.section .content {
  flex: 1;
}
.section-textarea {
  display: flex;
}
.section-textarea .content {
  flex: 1;
  height: 400rpx;
  overflow-y: auto;
}
.fontSize28 {
  font-size: 28rpx;
}
.fontSize42 {
  font-size: 42rpx;
}
.title {
  flex: 1;
  color: #262727;
  font-size: 38rpx;
  font-weight: bold;
}
.status {
  width: 96rpx;
  height: 36rpx;
  line-height: 35rpx;
  border-radius: 36rpx;
  text-align: center;
  color: #FFFFFF;
  font-size: 24rpx;
}
.status.approvaling {
  background: #FF7B12;
}
.status.approvaled {
  background: #15D843;
}
.status.approvaled-error {
  background: #ff5028;
}
.name {
  width: 220rpx;
  color: #808080;
}
.content {
  color: #262727;
}
.tab-box {
  display: flex;
  height: 88rpx;
  align-items: center;
  background: #FFFFFF;
}
.tab-item {
  flex: 1;
  text-align: center;
}
.tab-item text {
  display: inline-block;
  color: #808080;
  font-size: 36rpx;
  width: 150rpx;
  height: 100%;
  line-height: 80rpx;
  cursor: pointer;
}
.tab-item text.active {
  color: #262727;
  font-weight: 600;
  border-bottom: 4rpx solid #4787F1;
}
.line {
  width: 100%;
  height: 2rpx;
  margin-bottom: 30rpx;
  background: #E8E9EB;
}
.product-name {
  color: #262727;
  font-size: 36rpx;
  font-weight: 600;
  margin-bottom: 30rpx;
}

/* 操作按钮 */
.edit-box {
  position: fixed;
  right: 0;
  bottom: 154rpx;
  width: 157rpx;
  height: 157rpx;
  cursor: pointer;
}
.edit-box image {
  width: 100%;
  height: 100%;
}
.btn-box {
  position: fixed;
  left: 0;
  bottom: 0;
  width: 100%;
  height: 108rpx;
  background: #FFFFFF;
}
.approval-box {
  display: flex;
  padding: 10rpx;
}
.btn-text {
  display: inline-block;
  flex: 1;
  color: #FFFFFF;
  font-size: 34rpx;
  height: 88rpx;
  line-height: 88rpx;
  text-align: center;
}
.btn-text.agree {
  margin-right: 10rpx;
  background: #4787f1;
}
.btn-text.refuse {
  background: #ff5028;
}
.btn-text.distribute,.btn-text.invoice {
  background: #4787F1;
  margin-right: 11rpx;
}
.btn-text.arrivalMoney {
  background: #FF9C28;
}
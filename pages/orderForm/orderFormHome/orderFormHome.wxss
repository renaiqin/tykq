/* pages/orderForm/orderFormHome/orderFormHome.wxss */

page{
  background: #F2F3F5;
}
.orderForm-wrapper {
  height: 100%;
  padding: 0;
}
.tab-box {
  display: flex;
  height: 88rpx;
  background: #FFFFFF;
}
.tab-box view {
  flex: 1;
  height: 100%;
  line-height: 88rpx;
  text-align: center;
  cursor: pointer;
  font-size: 34rpx;
  color: #808080;
  position: relative;
}
.tab-box view.active {
  font-weight: 600;
  color: #4787F1;
  border-bottom: 6rpx solid #4787F1; 
}
.totalItemCount {
  position: absolute;
  display: inline-block;
  top: 0;
  right: 30rpx;
  width: 40rpx;
  height: 40rpx;
  line-height: 40rpx;
  text-align: center;
  border-radius: 20rpx;
  background: #FF4141;
  color: #FFFFFF;
}
.search-bar {
  display: flex;
  align-items: center;
  width: 100%;
  height: 88rpx;
  padding: 16rpx 30rpx 12rpx;
  box-sizing: border-box;
  background-color:#FFFFFF;
}
.search-bar__input-box {
  display: flex;
  width: 395rpx;
  height: 60rpx;
  padding: 0 20rpx;
  font-size: 28rpx;
  align-items: center;
  border-radius: 30rpx;
  background: #F2F3F5;
}
.search-bar__input {
  margin-left: 20rpx;
}
.search-bar__select-box {
  flex: 1;
  font-size: 28rpx;
  color: #262727;
  position: relative;
  height: 60rpx;
  line-height: 60rpx;
  margin-left: 30rpx;
  text-align: center;
  border-left: 1px solid #EBECED;
}
.triangle_border_down {
  position: absolute;
  right: 0;
  top: 28rpx;
  width:0;
  height:0;
  border-width:10rpx 10rpx 0;
  border-style:solid;
  border-color:#333 transparent transparent;
}
.list-empty-box {
  display: flex;
  align-items: center;
  justify-content: center;
  color: #cccccc;
  font-size: 30rpx;
}
.list-box {
  margin-top: 10rpx;
  padding: 0 15rpx;
}
.item {
  padding: 30rpx;
  margin-bottom: 30rpx;
  background: #FFFFFF;
}
.item-top {
  margin-bottom: 30rpx;
}
.name {
  font-size: 36rpx;
  color: #262727;
  font-weight: bold;
}
.stage {
  color: #262727;
  font-size: 13px;
}
.stage .img {
  display: inline-block;
  vertical-align: top;
  width: 28rpx;
  margin-top: 5rpx;
  margin-right: 10rpx;
}
.item-content {
  color: #808080;
  font-size: 28rpx;
}
.item-marginTop{
  margin-top: 20rpx;
}
.item-content text{
  display: inline-block;
  width: 200rpx;
  color: #808080;
  font-size: 28rpx;
}
.item-bottom {
  position: relative;
  margin-top: 25rpx;
  font-size: 13px;
}
.btn {
  display: inline-block;
  width: 140rpx;
  height: 64rpx;
  line-height: 64rpx;
  text-align: center;
  border-radius: 8rpx;
  cursor: pointer;
  font-size: 28rpx;
}
.followUp-btn {
  margin-right: 30rpx;
  color: #FFFFFF;
  background: #4787F1;
}
.approval-btn {
  color: #FFFFFF;
  background: #15D843;
}
.del-btn {
  color: #FF4141;
  background: #F2F3F5;
}

/* 添加订单按钮 */
.add-btn-box {
  position: fixed;
  bottom: 100rpx;
  right: 40rpx;
  background: #4787F1;
  width: 130rpx;
  height:130rpx;
  border-radius: 80rpx;
  cursor: pointer;
  text-align: center;
  line-height: 120rpx;
  color:#fff;
  font-size: 80rpx;
}
.icon-add {
  color: #fff;
  font-size: 40rpx;
}
.addText{
  color:#fff;
  font-size: 80rpx;
}
/* pages/device/wx/wxlist/wxList.wxss */
.main{
  width: 100%;
}
 

.section{
  width: 43%;
  border:1px solid #F7F7F7;
  margin-left: 30rpx;
  height: 50rpx;
  font-size: 26rpx;
  color:#808080;
  line-height: 50rpx;
  text-align: center;
}

.itemWarp{
  width:86%;
  border: 1rpx solid #C8C8CA;
  border-radius: 16rpx;
  margin:20rpx auto;
  padding: 20rpx;
  min-height: 300rpx;
  position: relative;
}
.item-name{
  padding-top: 20rpx;
  font-size: 38rpx;
}
.item{
  width: 90%;
  margin:15rpx auto;
  margin-top: 40rpx;
  position: relative;
  
}

.item-content{
  font-size: 30rpx;
  margin-top:15rpx;
  color:#262727;
}
.handelItem{
  background-color: #4787F1;
  color:#fff;
  padding: 8rpx 20rpx;
  border-radius: 10rpx;
  margin-left: 8rpx;
  font-size: 30rpx;
}

.diaryType{
  width: 510rpx;
  margin:0 auto;
}

.checkDiary{
  color:#4787F1;
  border-bottom:1rpx solid #4787F1;
}

.check{
  background-color: #4787F1 !important;
  color:#fff !important;
}
.diarylist{
  width: 86%;
  margin:10rpx auto;
  padding:20rpx;
  border:1rpx solid #C8C7CC;
  border-radius: 5rpx;
}

.tabCom{
  float: left;
  width: 150rpx;
  height: 60rpx;
  line-height: 60rpx;
  text-align: center;
  color:#333;
  font-size: 30rpx;
  background-color: #F7F7F7;
  margin-left: 10rpx;
  margin-right: 10rpx;
  border-radius: 8rpx;
}
.help{
  width: 515rpx;
  font-size: 32rpx;
  height: 60rpx;
  line-height: 60rpx;
  padding-left: 15rpx;
  position: relative;
  background-color: #F8F8F8;
}
.help:before{
  content:"";
  position:absolute;
  top:20rpx;
  right:20rpx;
  border-top:14rpx solid #C8C7CC;
  border-left:14rpx solid transparent;
  border-right:14rpx solid transparent;
}
.checkHelp{
  height: 50rpx;
  font-size: 30rpx;
  line-height: 50rpx;
}
.helpWarp{
  padding: 20rpx;
  font-size: 34rpx;
  margin-top: 20rpx;
}
.itemWarp{
  position: relative;
  margin-bottom:20rpx;
}
.needAfter:after{
  content: "";
  position: absolute;
  top: 70rpx;
  right:80rpx;
  border-right:1rpx solid #757575;
  border-bottom: 1rpx solid #757575;
  width: 20rpx;
  height: 20rpx;
  transform: rotate(-45deg);
  -o-transform: rotate(-45deg);
  -webkit-transform: rotate(-45deg);
  -moz-transform: rotate(-45deg);
  -ms-transform: rotate(-45deg);
}

.headImg{
  width: 100rpx;
  height: 100rpx;
  margin-right:30rpx;
}
.mySignIn{
  width: 90%;
  margin:30rpx;
  position: relative;
  overflow: hidden;
  display: block;
  border-bottom:1rpx solid #eee;
}
.myName{
  color:#333;
  font-size: 30rpx;
  display: block;
  padding-top:15rpx;
}
.myTime{
  color:#9E9E9E;
  font-size: 25rpx;
  display: block;
  padding-top:5rpx;
}
.mySignInLinkman{
  color:#666666;
  font-size: 30rpx;
  line-height: 40rpx;
  width: 630rpx;
}
.mySignTitle{
  color:#333;
  font-size: 30rpx;
  line-height: 60rpx;
  position: relative;
  width: 650rpx
}

.mySignTitle:after{
  content: ""; 
  position: absolute;
  top: 0rpx; 
  right: -16rpx; 
  margin: 20rpx; 
  border-right:1rpx solid #333; 
  border-bottom: 1rpx solid #333; 
  width: 20rpx; 
  height: 20rpx; 
  transform: rotate(-45deg);
  -o-transform: rotate(-45deg); 
  -webkit-transform: rotate(-45deg);
  -moz-transform: rotate(-45deg); 
  -ms-transform: rotate(-45deg);
}
.left{
  float: left
}

.clear {
  zoom: 1;
}

.clear:after {
  content: "\20";
  display: block;
  height: 0;
  clear: both;
}